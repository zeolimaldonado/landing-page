---
import ButtonDemo from "./ButtonDemo.astro"
import NavigationItem from "./NavigationItem.astro"
import { NAVIGATION } from "../constants";
---

<section class='w-screen h-16 py-2 bg-neutral-900 bg-opacity-90 fixed top-0 z-50'>
	<nav class="h-full container mx-auto flex justify-between gap-2 items-center px-6">
		<div class="flex-1">
			<h4 class="text-white">
				Serverless
			</h4>
		</div>
		<ul class="flex justify-center items-center gap-4">
			{
				NAVIGATION.map((item) => (
					<NavigationItem href={item.href}>
						{item.title}
					</NavigationItem>
				))
			}
		</ul>
		<div class="h-full flex-1 flex justify-end items-center">
			<ButtonDemo />
		</div>
	</nav>
</section>