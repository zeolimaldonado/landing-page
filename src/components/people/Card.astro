---
const { job, description } = Astro.props
---

<div class="rounded-md bg-neutral-700 px-8 py-10 w-full">
    <div class="flex items-center relative pl-8 mb-6">
        <img class="absolute right-0 left-0 -z-0" width="50" height="50" src="/images/bg-person.png" alt="">
        <h3 class="text-xl font-bold text-slate-300 z-10">
            {job}
        </h3>
    </div>
    <div class="w-2/3 border-b-2 border-b-gray-600" />
    <p class="text-slate-400 font-medium text-balance mt-4 max-w-[65ch] py-4">
        {description}
    </p>
</div>